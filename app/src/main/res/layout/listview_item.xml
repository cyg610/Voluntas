<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:elevation="10dp"
    android:background="@drawable/item_border"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ListView_Item_Title"
        android:text="송파구립 마천청소년수련관"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ListView_Item_Work"
        android:text="도서관 환경정리"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ListView_Item_Date"
        android:text="2016/10/12 ~"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



        <Button
            android:id="@+id/ListView_Item_DetailButton"
            android:text="상세보기"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:elevation="3dp"
            android:layout_margin="10dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/custom_btn1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>

</LinearLayout>